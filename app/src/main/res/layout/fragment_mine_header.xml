<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray">

    <RelativeLayout
        android:layout_marginTop="@dimen/margin_head_top"
        android:layout_marginStart="@dimen/margin_head_start"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_mine_head_size">

        <ImageView
            android:id="@+id/mine_head_pic"
            android:layout_width="@dimen/fragment_mine_head_size"
            android:layout_height="@dimen/fragment_mine_head_size"
            android:background="@drawable/recommend_rank" />

        <TextView
            android:layout_marginTop="@dimen/margin_nickname_top"
            android:id="@+id/mine_head_nickname"
            android:layout_width="@dimen/fragment_mine_nickname_width"
            android:layout_height="@dimen/fragment_mine_nickname_height"
            android:layout_marginStart="@dimen/fragment_mine_head_size"
            android:text="@string/template_name"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/mine_head_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_weight="@integer/one"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/mine_localmusic"
                android:scaleType="center"
                android:background="@drawable/mine_localmusic"
                android:layout_marginTop="@dimen/recommend_item_top"
                android:layout_marginStart="@dimen/recommend_item_start"
                android:layout_width="@dimen/recommend_item_size"
                android:layout_height="@dimen/recommend_item_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="@integer/one"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="center"
                android:background="@drawable/mine_download"
                android:layout_marginTop="@dimen/recommend_item_top"
                android:layout_marginStart="@dimen/recommend_item_start"
                android:layout_width="@dimen/recommend_item_size"
                android:layout_height="@dimen/recommend_item_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="@integer/one"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="center"
                android:background="@drawable/mine_station"
                android:layout_marginTop="@dimen/recommend_item_top"
                android:layout_marginStart="@dimen/recommend_item_start"
                android:layout_width="@dimen/recommend_item_size"
                android:layout_height="@dimen/recommend_item_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="@integer/one"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="center"
                android:background="@drawable/mine_collection"
                android:layout_marginTop="@dimen/recommend_item_top"
                android:layout_marginStart="@dimen/recommend_item_start"
                android:layout_width="@dimen/recommend_item_size"
                android:layout_height="@dimen/recommend_item_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="@integer/one"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="center"
                android:background="@drawable/mine_newsong"
                android:layout_marginTop="@dimen/recommend_item_top"
                android:layout_marginStart="@dimen/recommend_item_start"
                android:layout_width="@dimen/recommend_item_size"
                android:layout_height="@dimen/recommend_item_size" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>