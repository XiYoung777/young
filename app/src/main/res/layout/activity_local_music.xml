<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_localmusic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LocalMusicActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/playbar_margin_top">

        <include layout="@layout/app_bar_localmusic" />

        <include
            layout="@layout/content_localmusic"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <include layout="@layout/music_playbar"/>
</androidx.drawerlayout.widget.DrawerLayout>